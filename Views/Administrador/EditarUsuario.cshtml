@model CompaniaRepuestos.Models.Usuario

@{
    ViewData["Title"] = "EditarUsuario";
}

<h1>Editar Usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarUsuario" method="post">
            <div class="form-group">
                <label asp-for="idUsuario" class="control-label"></label>
                <input asp-for="idUsuario" class="form-control" />
