@model CompaniaRepuestos.Models.Usuario

@{
    ViewData["Title"] = "EliminarUsuario";
}

<h1>Eliminar Usuario</h1>

<h3>Ingresa el ID del usuario que deseas eliminar:</h3>
<div>
    <form asp-action="EliminarUsuario" method="post">
        <div class="form-group">
            <label for="idUsuario">ID de Usuario:</label>
            <input type="number" id="idUsuario" name="idUsuario" class="form-control" />
        </div>
        <input type="submit" value="Eliminar" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este usuario?')" /> |
        <a asp-action="EliminarUsuario">Volver a la lista</a>
    </form>
</div>
